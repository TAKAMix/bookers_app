<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

<div class="field">
    <label>Title</label>
    <label><%= f.text_field :title %></label>
  </div>

 
  <div class="field">
    <label>Body</label>
    <label><%= f.text_area :body %></label>
  </div>
  
  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>
  
<% end %>

<p>
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path %>
  </P>
